<section class="max-w-2xl mx-auto mt-10 p-6 bg-white rounded shadow">
  <div class="flex justify-between">
    <h1 class="text-3xl font-bold mb-4">Blog Post</h1>
    <% if user_signed_in? %>
      <p class="text-gray-700 mb-6"><%= blog_post_status(@blog_post) %></p>
    <% end %>
  </div>

  <h2 class="text-2xl font-semibold text-gray-800 mb-2"><%= @blog_post.title %></h2>
  <p class="text-gray-700 mb-6"><%= @blog_post.content %></p>

  <div class="text-right">
    <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" %>
  </div>
</section>