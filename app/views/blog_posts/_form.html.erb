<%= form_with model: blog_post do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |error| %>
    <p><%= error %></p>
    <% end %>
  <% end %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.textarea :body%>
  </div>

  <%= f.button %>
<% end %>